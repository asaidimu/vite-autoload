{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "outDir": "./dist"
  },
  "include": ["src/**/*", "./index.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "./example.config.ts",
    "./src/manifest",
    "./ui"
  ]
}
